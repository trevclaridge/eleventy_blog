<h1>Recent Posts</h1>
<ul>
    {% for post in collections.post | reverse %}
        <li class="post-card on-click="location.href='{{ post.url }}'">
            <img src="{{ post.data.img }}" alt="{{ post.data.img_alt }}">
            <a href="{{ post.url }}">{{ post.data.title }}</a>
        </li>
    {% endfor %}
</ul>